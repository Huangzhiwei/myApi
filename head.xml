	<!-- *.cfg.xml文件，数据库配置-->
	<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

	<!-- Generated by MyEclipse Hibernate Tools.                   -->
	<hibernate-configuration>

		<session-factory>
			    <!-- 方言类 -->
			<property name="dialect">
				org.hibernate.dialect.MySQLDialect
			</property>
	
			<property name="connection.url">
			  	  <!--连接MySQL的IP地址及端口号，注意MySQL的默认远程连接是关闭的-->
			j	dbc:mysql://127.0.0.1:3306/world
			</property>
		            <!--连接MySQL的用户名-->
			<property name="connection.username">root</property>
	
			            <!--连接MySQL的密码-->
			<property name="connection.password">1853</property>
			
				    <!--连接MySQL的驱动类名-->
			<property name="connection.driver_class">
				com.mysql.jdbc.Driver
			</property>
		
			<!-- 数据库连接池-->
			<property name="hibernate.c3p0.min_size">5</property>
			<property name="hibernate.c3p0.max_size">20</property>
			<property name="hibernate.c3p0.timeout">300</property>
			<property name="hibernate.c3p0.max_statements">350</property>
			<property name="hibernate.c3p0.idle_test_period">3000</property>
			
	             <!--以格式良好的方式显示SQL语句-->
			<property name="format_sql">true</property> 
			     <!--显示SQL语句-->	
			<property name="show_sql">true</property>
			
				<!-- 自动在数据库中创建表,可选update、create等-->
			<property name="hibernate.hbm2ddl.auto">update</property>
			<!-- 建立表与数据库之间的联系-->
			<mapping resource="data/Message.hbm.xml"/>
			<mapping resource="data/FFF.hbm.xml"/>
			<!-- 使用注解的java类的加载方法-->
			<mapping class="data.Message"/>
		</session-factory>

	</hibernate-configuration>
