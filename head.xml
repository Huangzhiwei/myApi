	<!-- *.hbm.xml文件，POJO到table的映射表头-->
	<?xml version="1.0"?>
	<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
	<hibernate-mapping>
	<class 
		name="data.Message"
		table="Message">
		<id name="id"
			column="MESSAGE_ID">
			<generator class="increment"/>
		</id>
		<property 
			name="text"
			column="MESSAGE_TEXT" />
		<many-to-one
			name="nextMessage"
			cascade="all"
			column="NEXT_MESSAGE_ID"
			foreign-key="FK_NEXT_MESSAGE" />
	</class>
	</hibernate-mapping>
